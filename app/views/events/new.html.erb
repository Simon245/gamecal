<div class="row">
  <div class="col-md-12">
    <h1>Create Game</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= form_for @event do |f|%>
      <div id="new_event">

        <div class="group-btn">
          <%= f.text_field(:game_id, class: "group-btn") %>
        </div>

        <select class="form-control">
          <option>1</option>
          <option>1</option>
          <option>1</option>
          <option>1</option>
          <option>1</option>
        </select>

        <div class="form-group col-xs-4" role="form">
          <%= f.text_field :date, class: "event_date form-control" %>
        </div>

        <div class="form-inline" role="form">
          <%= f.text_field :time_start, class: "event_time"  %>
          <%= f.text_field :time_finish, class: "event_time" %>
        </div>

        <div class="checkbox">
          <%= f.check_box :email_address %>
          <p>Email notification</p>
        </div>

        <div class="form-group">
          <%= f.text_area :description, size: "40x5", placeholder: "Description of event"  %>
        </div>

        <div>
          <%= submit_tag :Submit, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Friends</h3>
      </div>
      <div class="panel-body">
        Select friends here
      </div>
    </div>

  </div>
</div>