<div class="row">
  <div class="col-md-12">
    <div>
      <% if session.key? :current_user %>
        <h1>Current user:</h1>
        <%= image_tag session[:current_user][:image] %>
        <p><%= session[:current_user][:nickname] %></p>
      <% end %>
    </div>
    <div>
      <%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_noborder.png"), '/auth/steam' %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-5">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Todays Events</h2>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div id="events">
      <h2 id="month">
        <%= link_to "<", date: @date.prev_month %>
        <%= @date.strftime("%B %Y") %>
        <%= link_to ">", date: @date.next_month %>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% if @events_by_date[date] %>
          <ul>
            <% @events_by_date[date].each do |event| %>
              <li><%= link_to event.name, event %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Friends List</h2>
      </div>
      <div class="panel-body friends_list">
        <img class="friendslist" src="http://static.giantbomb.com/uploads/original/3/32253/1857636-r3253.jpg">
      </div>
    </div>
  </div>
</div>



